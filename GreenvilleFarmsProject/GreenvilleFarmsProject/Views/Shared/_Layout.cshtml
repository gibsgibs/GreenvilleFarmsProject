@using Microsoft.AspNet.Identity

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Greenville Farms</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <!--Fonts-->
    <link href="https://fonts.googleapis.com/css?family=Berkshire+Swash&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Averia+Libre&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Baloo+Tamma&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Arizonia&display=swap" rel="stylesheet">

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/navbar.js"></script>
</head>
<body>
<nav class="navbar navbar-expand-md text-center bg-dark">
    <ul class="navbar-nav">
        <li class="nav-item">
            <strong>
                @Html.ActionLink("HOME", "Index", "Home", null, new { @class = "nav-link" })
            </strong>
        </li>
        <li class="nav-item">
            <strong>
                @Html.ActionLink("CONTACT", "Contact", "Home", null, new { @class = "nav-link" })
            </strong>
        </li>
        <li class="nav-item">
            <strong>
                @Html.ActionLink("ABOUT", "About", "Home", null, new { @class = "nav-link" })
            </strong>
        </li>
    </ul>    
    <ul class="navbar-nav ml-auto">
        @Html.Partial("_LoginPartial")
    </ul>
</nav>
    <div class="container">
        <div class="center" id="title">
            <h1>Greenville Farms</h1>
        </div>
        @RenderBody()
    </div>
    <footer>
        <div class="row" style="margin:0;">
            <div class="col-4"><span id="gift"><strong>A Gift of Oregon</strong></span></div>
            <div class="col-4 d-flex justify-content-center"><span id="farm">Greenville Farms</span></div>
            <div class="col-4 d-flex justify-content-end"><span id="gift"><strong>Made on the Farm</strong></span></div>
        </div>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
