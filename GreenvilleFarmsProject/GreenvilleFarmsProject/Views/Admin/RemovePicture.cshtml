@model GreenvilleFarmsProject.Models.Picture
@{
    ViewBag.Title = "RemovePicture";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-xl-6 col-xs-12">
            <br />
            <div class="card border-green">
                <div class="card-header bg-green" style="color:#ffffff;">
                    <h2>Are you sure you want to delete this picture?</h2>
                </div>
                <div class="card-body border-green">
                    @using (Html.BeginForm())
                    {
                        <div class="row">
                            <div class="col-md-6 col-xs-6">
                                <div style="padding-bottom:1.25rem;">
                                    <button type="submit" name="approved" class="btn btn-green btn-lg btn-block" value="1">Yes</button>                                    
                                </div>
                            </div>
                            <div class="col-md-6 col-xs-6">
                                <div style="padding-bottom:1.25rem;">                                    
                                    <button type="submit" name="approved" class="btn btn-green btn-lg btn-block" value="0">No</button>
                                </div>
                            </div>
                        </div>                        
                        <img class="d-block picture" src="~/Content/Images/Picture_Uploads/@Model.PictureName" />
                    }
                </div>
            </div>
        </div>
    </div>
</div>