@model GreenvilleFarmsProject.Models.ContactForm
@{
    ViewBag.Title = "Contact";
}
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>

<address>
    One Microsoft Way<br />
    Redmond, WA 98052-6399<br />
    <abbr title="Phone">P:</abbr>
    425.555.0100
</address>

<div class="container-fluid">
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary()
        <div class="form-group">
            <label>
                Name:
            </label>
            @Html.TextBoxFor(x => x.Name, new
            {
                @class = "form-control"
            })
        </div><!--/form-group-->
        @Html.ValidationSummary()
        <div class="form-group">
            <label>
                Email Address:
            </label>
            @Html.TextBoxFor(x => x.Email, new
            {
                @class = "form-control"
            })
        </div><!--/form-group-->
        @Html.ValidationSummary()
        <div class="form-group">
            <label>
                Subject:
            </label>
            @Html.TextBoxFor(x => x.Subject, new
            {
                @class = "form-control"
            })
        </div><!--/form-group-->
        @Html.ValidationSummary()
        <div class="form-group">
            <label>
                Message:
            </label>
            @Html.TextBoxFor(x => x.EmailContents, new
            {
                @class = "form-control"
            })
        </div><!--/form-group-->
        <div>
            <input class="btn btn-light" type="submit" value="Send Email" />
        </div>
    }
</div><!--/container-fluid-->